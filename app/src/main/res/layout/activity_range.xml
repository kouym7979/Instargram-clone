<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/range_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:text="@string/range"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/range_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="40sp"
        android:gravity="center"
        android:text="@string/range_detail"
        android:textColor="@color/gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/range_text" />



    <ImageView
        android:id="@+id/close_lock_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="20sp"
        android:src="@drawable/ic_closed_lock"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/range_detail" />

    <TextView
        android:id="@+id/close_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="25sp"
        android:text="@string/close"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/close_lock_img"
        app:layout_constraintTop_toBottomOf="@id/range_detail" />

    <TextView
        android:id="@+id/close_detail"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:text="@string/close_detail"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:layout_marginTop="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close_lock_img" />

    <CheckBox
        android:id="@+id/close_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_marginRight="5sp"
        android:button="@drawable/round_check_box"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/range_detail" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20sp"
        android:background="@color/gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close_detail" />

    <ImageView
        android:id="@+id/open_lock_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="20sp"
        android:src="@drawable/ic_free_icon_open_lock_808524"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3" />
    <TextView
        android:id="@+id/open_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="25sp"
        android:text="@string/open"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/open_lock_img"
        app:layout_constraintTop_toBottomOf="@id/view3" />

    <TextView
        android:id="@+id/open_detail"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:text="@string/open_detail"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:layout_marginTop="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/open_lock_img" />

    <CheckBox
        android:id="@+id/open_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_marginRight="5sp"
        android:button="@drawable/round_check_box"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/range_btn"
        android:textColor="@color/white"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:enabled="false"
        app:layout_constraintHeight_percent="0.065"
        android:background="@drawable/next_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20sp"
        android:text="@string/next"/>

</androidx.constraintlayout.widget.ConstraintLayout>